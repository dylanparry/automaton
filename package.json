{
  "name": "automaton",
  "version": "1.0.0",
  "description": "Home Automation software for Raspberry Pi",
  "main": "./dist/main-process.js",
  "author": "Dylan Parry",
  "license": "MIT",
  "private": true,
  "dependencies": {
    "babel-core": "^6.23.1",
    "babel-eslint": "^7.1.1",
    "babel-loader": "^6.4.0",
    "babel-plugin-transform-class-properties": "^6.23.0",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-preset-latest": "^6.22.0",
    "babel-preset-react": "^6.23.0",
    "chartist": "^0.10.1",
    "cross-env": "^3.2.3",
    "electron": "^1.6.2",
    "electron-packager": "^8.5.2",
    "eslint": "^3.17.1",
    "eslint-config-airbnb": "^14.1.0",
    "eslint-plugin-import": "^2.1.0",
    "eslint-plugin-jsx-a11y": "^4.0.0",
    "eslint-plugin-react": "^6.10.0",
    "font-awesome": "^4.7.0",
    "jest": "^19.0.2",
    "jquery": "^3.1.1",
    "leftpad": "^0.0.0",
    "metro-dist": "^3.0.15",
    "mobx": "^3.1.5",
    "mobx-react": "^4.1.3",
    "moment": "^2.17.1",
    "react": "^15.4.2",
    "react-chartist": "^0.12.0",
    "react-dom": "^15.4.2",
    "react-router": "3.0.2",
    "request": "^2.81.0",
    "webpack": "^2.2.1"
  },
  "scripts": {
    "dev": "webpack --watch --progress --colors",
    "start": "cross-env NODE_ENV=test electron .",
    "test": "jest",
    "lint": "eslint ./ --ext .jsx,.js",
    "prebuild": "webpack -p --progress --colors --env.production",
    "build": "electron-packager . --out packages --overwrite --arch armv7l --platform linux --asar && electron-packager . --out packages --overwrite --arch x64 --platform win32 --asar"
  },
  "babel": {
    "presets": [
      [
        "latest"
      ],
      [
        "react"
      ]
    ],
    "plugins": [
      "transform-decorators-legacy",
      "transform-class-properties"
    ]
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": "airbnb",
    "rules": {
      "brace-style": [
        "error",
        "allman"
      ],
      "react/jsx-closing-bracket-location": [
        2,
        {
          "nonEmpty": "tag-aligned",
          "selfClosing": "after-props"
        }
      ]
    },
    "env": {
      "browser": true,
      "node": true,
      "jest": true
    }
  }
}
