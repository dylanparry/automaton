{
  "name": "automaton",
  "version": "1.0.0",
  "description": "Home Automation software for Raspberry Pi",
  "main": "./dist/main-process.js",
  "author": "Dylan Parry",
  "license": "MIT",
  "private": true,
  "dependencies": {
    "babel-core": "^6.20.0",
    "babel-eslint": "^7.1.1",
    "babel-loader": "^6.2.9",
    "babel-plugin-transform-class-properties": "^6.19.0",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-preset-latest": "^6.16.0",
    "babel-preset-react": "^6.16.0",
    "chartist": "^0.10.1",
    "cross-env": "^3.1.4",
    "electron": "^1.4.14",
    "electron-packager": "^8.5.0",
    "eslint": "^3.12.1",
    "eslint-config-airbnb": "^13.0.0",
    "eslint-plugin-import": "^2.1.0",
    "eslint-plugin-jsx-a11y": "^2.2.3",
    "eslint-plugin-react": "^6.6.0",
    "font-awesome": "^4.7.0",
    "jest": "^18.1.0",
    "jquery": "^3.1.1",
    "leftpad": "^0.0.0",
    "metro-dist": "^3.0.15",
    "mobx": "^2.6.5",
    "mobx-react": "^4.0.3",
    "moment": "^2.17.1",
    "react": "^15.4.1",
    "react-chartist": "^0.11.0",
    "react-dom": "^15.4.1",
    "react-router": "^3.0.0",
    "request": "^2.79.0",
    "webpack": "2.2.0-rc.4"
  },
  "scripts": {
    "dev": "cross-env NODE_ENV=development webpack -d --watch",
    "start": "cross-env NODE_ENV=test electron .",
    "test": "jest",
    "lint": "eslint ./ --ext .jsx,.js",
    "prebuild": "cross-env NODE_ENV=production webpack -p",
    "build": "electron-packager . --out packages --overwrite --arch armv7l --platform linux --asar && electron-packager . --out packages --overwrite --arch x64 --platform win32 --asar"
  },
  "babel": {
    "presets": [
      [
        "latest"
      ],
      [
        "react"
      ]
    ],
    "plugins": [
      "transform-decorators-legacy",
      "transform-class-properties"
    ]
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": "airbnb",
    "rules": {
      "brace-style": [
        "error",
        "stroustrup"
      ],
      "class-methods-use-this": 0,
      "no-underscore-dangle": [
        "error",
        {
          "allowAfterThis": true
        }
      ],
      "react/jsx-closing-bracket-location": [
        2,
        {
          "nonEmpty": "tag-aligned",
          "selfClosing": "after-props"
        }
      ]
    },
    "env": {
      "browser": true,
      "node": true,
      "jest": true
    }
  }
}
