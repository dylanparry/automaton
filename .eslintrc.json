{
  "root": true,
  "parser": "babel-eslint",
  "extends": "airbnb",
  "rules": {
    "brace-style": [
      "error",
      "stroustrup"
    ],
    "class-methods-use-this": 0,
    "indent": [
      "error",
      4,
      {
        "SwitchCase": 1
      }
    ],
    "react/jsx-indent": [
      "error",
      4
    ],
    "no-underscore-dangle": [
      "error",
      {
        "allowAfterThis": true
      }
    ]
  },
  "env": {
    "browser": true,
    "node": true,
    "jest": true
  }
}
